<div id="information" class="tabcontent">
  <div class="avatar">
    <div class="img-defaul">
      <% if current_user.avatar_url %>
        <img src="<%= current_user.avatar %>" class="avatar-user" />
      <% else %>
        <%= image_tag("avatar_default.jpg", class: "avatar-user") %>
      <% end %>
    </div>
    </br>
  </div>

  <%= form_for(current_user, url: users_path, method: :patch) do |form| %>
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control", readonly: :true %>
        </div>
        <div class="form-group">
          <div class="form-group"> 
            <%= form.file_field :avatar, id:"my_file" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col d-flex justify-content-end">
        <div class="button-create">
          <%= form.submit t(".update"), class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
