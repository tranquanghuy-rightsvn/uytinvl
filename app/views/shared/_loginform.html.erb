<div class="modal fade" id="modal-signin" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="error-message-signin" class="alert alert-danger">
        Sai tài khoản hoặc mật khẩu!
      </div>
        <% if current_user.blank? %>
          <div class="login-form">
            <h2>Đăng nhập</h2>
            <%= form_for(@user, url: new_user_session_path, remote: true) do |f| %>
              <div class="field">
                <%= f.label :email, "Email:" %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
              </div>

              <div class="field">
                <%= f.label :password, "Mật khẩu:" %><br />
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
              </br >
              <div class="actions">
                <%= f.submit "Đăng nhập" %>
              </div>
              <p class="center"> Bạn chưa có tài khoản? <span class="signup-click">Đăng ký ngay </span></p>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>